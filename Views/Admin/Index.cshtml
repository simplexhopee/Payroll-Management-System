@model IEnumerable<Checod_Africa.Models.admin>

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Admin List</h2>

<div style="text-align:right;">
    <!-- Button to open the create staff popup -->
    <button type="button" class="main-button " onclick="newStaff()">New Admin</button>
    </div>
   
        <table class="table-staff">
            @foreach (var item in Model)
            {


                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.admin_id)
                    </td>

                    <td>

                        <button type="button" class="in-button-failure " id="details" onclick="get_id('@item.admin_id')" data-toggle="modal" href="#myModal">Delete</button>
                    </td>
                </tr>
            }
        </table>
    
    <!-- Add the staff details popup -->
    <!-- Modal for displaying additional school details -->
    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header flex-column">
                    <div class="icon-box">
                        <i class="material-icons">&#xE5CD;</i>
                    </div>
                    <h4 class="modal-title w-100">Are you sure?</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this Admin?</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="in-button-failure" data-dismiss="modal">Cancel</button>
                    <button type="button" class="in-button-success" onclick="deleteStaff()">Delete</button>
                </div>
            </div>
        </div>
    </div>
    <div id="detailsModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="detailsModalLabel"></h4>
                </div>
                <div class="modal-body">

                    @using (Html.BeginForm("Save", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <span>
                                @Html.Label("Name", htmlAttributes: new { @class = "" })

                                <input id="adminid" name="adminid" class="modal-input green-input" type="text">
                                <button type="button" onclick="saveAdmin()" class="main-button ">Save</button>
                            </span>
                        </div>
                       
                            
                       
                    }
                </div>

            </div>
        </div>
    </div>


    <div id="successSaved" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header flex-column">
                    <div class="icon-box" style="border: 3px solid green;">
                        <i style="color:green;" class="material-icons">&#xE876;</i>
                    </div>
                    <h4 class="modal-title w-100">Success</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Admin Added Successfully</p>
                </div>
                <div class="modal-footer justify-content-center">

                </div>
            </div>
        </div>
    </div>

    <div id="successDelete" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header flex-column">
                    <div class="icon-box" style="border: 3px solid green;">
                        <i style="color:green;" class="material-icons">&#xE876;</i>
                    </div>
                    <h4 class="modal-title w-100">Success</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Admin Deleted Successfully</p>
                </div>
                <div class="modal-footer justify-content-center">

                </div>
            </div>
        </div>
    </div>

    @section scripts {
        <!-- Add jQuery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

        <script>
            var deleteid;


            function get_id(id) {
                deleteid = id;
            }


            function newStaff() {
                $('#detailsModalLabel').html("New Admin");
                $('#detailsModal').modal('show');
                // Retrieve school details via AJAX request

            }


            function showDetails(staff_id) {

                // Retrieve school details via AJAX request
                $.ajax({
                    url: 'staff/DetailsPopup',
                    type: 'GET',
                    data: { id: staff_id },
                    success: function (result) {
                        $('#detailsModalLabel').html("Staff Details");
                        $('#schoolDetails').html(result);
                        $('#detailsModal').modal('show');
                    }
                });
            }

            function saveAdmin() {
                // Retrieve the existing staff object via AJAX request
                var yourData = {
                    adminid: $("#adminid").val()

                };

                $.ajax({
                    type: "POST",
                    url: "/Admin/Save",
                    data: yourData,
                    dataType: "json",
                    success: function (response) {
                        if (response.status === true) {
                            $('#detailsModal').modal('hide');

                            $('#successSaved').modal('show');
                            // Hide the successDelete modal after a few seconds
                            setTimeout(function () {
                                $('#successDelete').modal('hide');
                                location.reload();
                            }, 1500); // Adjust the delay as needed

                        } else {
                            // Handle false return from JSON response (error)
                            alert("User exists");
                        }
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        // Handle AJAX error

                    }
                });
            }

            function deleteStaff() {
                var yourData = {
                    adminid: deleteid

                };


                // Retrieve school details via AJAX request
                $.ajax({
                    url: "/Admin/Delete",
                    type: "POST",
                    data: yourData,
                    success: function (response) {
                        // Close the popup
                        if (response.status === true) {
                            $('#detailsModal').modal('hide');
                            $('#myModal').modal('hide');


                            $('#successDelete').modal('show');
                            // Hide the successDelete modal after a few seconds
                            setTimeout(function () {
                                $('#successDelete').modal('hide');
                                location.reload();
                            }, 1500); // Adjust the delay as needed

                        }
                        else {
                            alert(response.message);
                        }
                        // Show a success message (optional)


                    }
                });

            }

        </script>
    }
