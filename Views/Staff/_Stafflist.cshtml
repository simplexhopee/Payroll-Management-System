@model IEnumerable<Checod_Africa.Models.staff>

    <table class="table-staff  ">
        <thead>
            <tr>
                <th>STAFF NUMBER</th>
                <th>STAFF NAME</th>
                <th>DESIGNATION</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {

            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.staff_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.staff_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.designation)
                    </td>
                    <td>
                        <!-- Add the "Edit" link with data attribute to store staff ID -->
                        <button type="button" class="in-button-success" id="details" onclick="showDetails('@item.staff_id')">Details</button>

                        <button type="button" class="in-button-failure" id="details2" onclick="get_id('@item.staff_id')" data-toggle="modal" href="#myModal">Delete</button>
                    </td>
                </tr>

            </tbody>
        }
    </table>


